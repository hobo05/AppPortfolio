<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffc3d6ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/portfolio_title"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="@dimen/app_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/spotify_streamer"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:background="@color/udacity_orange"
        android:onClick="displayToast" />

    <Button
        android:layout_width="@dimen/app_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/scores_app"
        android:id="@+id/button2"
        android:layout_marginTop="@dimen/app_button_margin"
        android:background="@color/udacity_orange"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="@dimen/app_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/library_app"
        android:id="@+id/button3"
        android:layout_marginTop="@dimen/app_button_margin"
        android:background="@color/udacity_orange"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="@dimen/app_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/build_it_bigger"
        android:id="@+id/button4"
        android:layout_marginTop="@dimen/app_button_margin"
        android:background="@color/udacity_orange"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="@dimen/app_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/xyz_reader"
        android:id="@+id/button5"
        android:layout_marginTop="@dimen/app_button_margin"
        android:background="@color/udacity_orange"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="@dimen/app_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/capstone"
        android:id="@+id/button6"
        android:layout_marginTop="@dimen/app_button_margin"
        android:background="#ff4fcc36"
        android:onClick="displayToast"/>

</LinearLayout>
